<h1> Hello my friend, Thank you for your order </h1>
<table class="responstable">
  <tr>
    <th><span>name</span></th>
    <th>Quantity</th>
    <th>Rate</th>
    <th>Amount</th>
  </tr>
  <% order = Order.find_by(id:  params[:id]) %>
  <%order.line_items.each do |line_item| %>
  <tr>
    <td><%=line_item.food_item.name %></td>
    <td><%=line_item.quantity%></td>
    <td><%=line_item.food_item.price%> Đồng</td>
    <td><%=(line_item.food_item.price) * line_item.quantity %> Đồng</td>
  <% end %>  

  </tr>
  <tr>
    <th colspan="2"><span>Total</span></th>
    <th> coupon: <%=order.coupon%>% </th>
    <th><%=order.amount * (1- order.coupon.to_f/100) %> Đồng</th>
    
  </tr>
</table>

<div class="div card">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Client:  <%=order.name%></li>
    <li class="list-group-item">Address:  <%=order.address%> </li>
    <li class="list-group-item">Phone:  <%=order.phone%></li>
    <li class="list-group-item">Time order:  <%=order.created_at%></li>
    <li class="list-group-item">Time recieve food:  <%=order.created_at + 60*60*2%> </li>
  </ul>
